{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zoyla",
  "version": "0.2.1",
  "identifier": "com.behnamazimi.zoyla",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "zoyla",
        "width": 1200,
        "height": 800,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "visible": false,
        "trafficLightPosition": {
          "x": 16,
          "y": 24
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "Entitlements.plist",
      "signingIdentity": "-",
      "hardenedRuntime": true
    }
  }
}
